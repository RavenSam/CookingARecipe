---
import type { Article } from "../../data/get-article"
import ArticleThumb from "../article-thumb.astro"

type Props = {
	title: string
	description?: string
	articles: Article[]
	blur?: boolean
}

const { title, description, articles, blur } = Astro.props
---

<section class="max-w-7xl mx-auto p-2">
	<div class="mb-6 md:mb-8 flex items-center justify-between">
		<div class="">
			<h2 class="text-3xl font-bold">{title}</h2>
			<p class="text-gray-500">{description}</p>
		</div>
	</div>

	<div class={`grid grid-cols-2 md:grid-cols-4 ${blur ? "group/blur" : ""}`}>
		{articles.map((article) => <ArticleThumb article={article} />)}
	</div>
</section>
